<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omicronrobotics.rafaelszuminski.localify.MainActivity">

    <com.yalantis.jellytoolbar.widget.JellyToolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        app:icon="@drawable/ic_searchdark"
        app:cancelIcon="@drawable/ic_exit"
        app:endColor="@color/colorPrimary"
        app:startColor="@color/colorPrimaryDark"
        app:titleTextColor="@android:color/white" />


    <include layout="@layout/content_main"
        android:id="@+id/include" />


</LinearLayout>
