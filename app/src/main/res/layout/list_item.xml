<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="467dp">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventInfo"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/eventName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:alpha="0.8"
                android:background="@color/red"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Event Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/eventName"
                android:alpha="0.8"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:text="Lorem ipsum dolor sit amet, quam erat massa. Mauris suspendisse fames nec, parturient tortor pellentesque porta. Aliquam quia, platea magna volutpat justo deserunt quis ultrices, pellentesque elit vivamus donec et justo, ipsum ante lacus sit, tristique consectetuer pellentesque malesuada. Phasellus quisque nullam risus leo felis, feugiat aptent purus massa dui semper, eget malesuada velit aenean libero nulla..."
                android:textColor="#ff272727"
                android:textSize="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>